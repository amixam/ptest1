#!/usr/bin/env python3


def main():
    access_template = [
        'switchport mode access', 'switchport access vlan {}',
        'switchport nonegotiate', 'spanning-tree portfast',
        'spanning-tree bpduguard enable']

    trunk_template = [
        'switchport trunk encapsulation dot1q', 'switchport mode trunk',
        'switchport trunk allowed vlan {}']

    if_dict = {
        'access': access_template,
        'trunk': trunk_template}

    question = {
        'access': 'Введите номер VLAN: ',
        'trunk': 'Введите разрешенные VLANы: '}

    if_type = input('Введите режим работы интерфейса (access/trunk): ')
    if_number = input('Введите тип и номер интерфейса: ')
    vlan_number = input(question[if_type])

    print('interface {}'.format(if_number))
    print('\n'.join(if_dict[if_type]).format(vlan_number))


if __name__ == '__main__':
    main()
